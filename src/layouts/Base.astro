---
const {
  title = 'AI Training Directory',
  description = 'Curated AI tools for employee training, learning and development, and corporate education.',
  canonical = 'https://aitraining.directory/',
  image = 'https://aitraining.directory/og-default.svg',
  noindex = false,
  jsonLd = null,
  alternates = []
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta name="robots" content={noindex ? 'noindex,nofollow' : 'index,follow,max-image-preview:large'} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={image} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    {alternates.map((alt) => <link rel="alternate" hreflang={alt.hreflang} href={alt.href} />)}
    {jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}

    <style>
      :root {
        --bg: #f6f8fc;
        --surface: #ffffff;
        --surface-soft: #f9fbff;
        --text: #0f172a;
        --muted: #475569;
        --line: #dbe4f0;
        --line-strong: #c4d1e2;
        --primary: #0b5fff;
        --primary-soft: #e8f0ff;
        --focus: #2563eb;
        --success-soft: #ecfdf3;
        --radius-sm: 10px;
        --radius-md: 14px;
        --radius-lg: 20px;
        --shadow-sm: 0 1px 2px rgba(15, 23, 42, 0.08);
        --shadow-md: 0 8px 28px rgba(15, 23, 42, 0.08);
        --space-1: 0.25rem;
        --space-2: 0.5rem;
        --space-3: 0.75rem;
        --space-4: 1rem;
        --space-5: 1.25rem;
        --space-6: 1.5rem;
        --space-8: 2rem;
        --space-10: 2.5rem;
        --space-12: 3rem;
      }

      * { box-sizing: border-box; }
      html { scroll-behavior: smooth; }
      body {
        margin: 0;
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        color: var(--text);
        background: linear-gradient(180deg, #f3f7ff 0%, var(--bg) 260px);
        text-rendering: optimizeLegibility;
        line-height: 1.6;
      }
      .site-shell {
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
      }
      .wrap {
        width: min(1120px, 100% - 2rem);
        margin-inline: auto;
      }
      main.wrap {
        flex: 1;
        padding-block: var(--space-8) var(--space-12);
      }
      a {
        color: var(--primary);
        text-decoration: none;
      }
      a:hover { text-decoration: underline; }
      a:focus-visible,
      button:focus-visible {
        outline: 3px solid var(--focus);
        outline-offset: 3px;
        border-radius: 8px;
      }
      h1, h2, h3 {
        margin: 0 0 var(--space-4);
        line-height: 1.15;
        letter-spacing: -0.02em;
      }
      h1 { font-size: clamp(1.95rem, 4vw, 3rem); }
      h2 { font-size: clamp(1.4rem, 2.3vw, 1.9rem); }
      h3 { font-size: clamp(1.12rem, 1.8vw, 1.35rem); }
      p { margin: 0 0 var(--space-4); }
      ul { margin: 0; padding-left: 1.2rem; }

      .muted { color: var(--muted); }
      .eyebrow {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #1e3a8a;
        background: var(--primary-soft);
        border: 1px solid #cfe0ff;
        padding: 0.35rem 0.65rem;
        border-radius: 999px;
      }

      .section {
        margin-top: var(--space-10);
      }
      .hero {
        background: radial-gradient(circle at top right, #deebff 0%, rgba(222, 235, 255, 0) 50%), var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
        padding: clamp(1.25rem, 2.6vw, 2.4rem);
        margin-bottom: var(--space-8);
      }
      .hero-actions {
        display: flex;
        gap: var(--space-3);
        flex-wrap: wrap;
        margin-top: var(--space-5);
      }

      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: var(--space-2);
        border-radius: 999px;
        border: 1px solid transparent;
        padding: 0.65rem 1rem;
        font-weight: 600;
        line-height: 1.2;
        transition: transform 120ms ease, box-shadow 120ms ease, background 120ms ease;
      }
      .btn:hover {
        text-decoration: none;
        transform: translateY(-1px);
      }
      .btn-primary {
        background: var(--primary);
        color: #fff;
        box-shadow: 0 8px 18px rgba(11, 95, 255, 0.25);
      }
      .btn-primary:hover { background: #0a52db; }
      .btn-secondary {
        background: #fff;
        border-color: var(--line-strong);
        color: var(--text);
      }

      .grid {
        display: grid;
        gap: var(--space-4);
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      }
      .card {
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
        padding: var(--space-5);
        content-visibility: auto;
      }
      .card:hover {
        border-color: var(--line-strong);
        box-shadow: var(--shadow-md);
      }

      .chips {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-2);
      }
      .chip,
      .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        font-size: 0.82rem;
        font-weight: 600;
        border: 1px solid var(--line-strong);
        color: #1e293b;
        background: #fff;
        border-radius: 999px;
        padding: 0.35rem 0.72rem;
      }
      .chip:hover,
      .badge:hover {
        text-decoration: none;
        border-color: #94b5ff;
        background: #f8fbff;
      }

      .site {
        border-bottom: 1px solid var(--line);
        background: color-mix(in srgb, #ffffff 94%, #e9f1ff);
        backdrop-filter: blur(8px);
      }
      .site-footer {
        border-top: 1px solid var(--line);
        background: #fff;
      }
      .nav-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--space-4);
        padding-block: 0.85rem;
      }
      .brand {
        color: inherit;
        text-decoration: none;
        font-weight: 800;
        letter-spacing: -0.01em;
      }
      .brand:hover { text-decoration: none; }
      .top-nav {
        display: flex;
        gap: var(--space-1);
        flex-wrap: wrap;
      }
      .top-nav a {
        color: var(--text);
        padding: 0.45rem 0.7rem;
        border-radius: 999px;
        font-weight: 500;
      }
      .top-nav a:hover {
        text-decoration: none;
        background: #eef4ff;
      }

      @media (max-width: 820px) {
        .nav-row {
          flex-direction: column;
          align-items: flex-start;
        }
      }
    </style>
  </head>
  <body>
    <div class="site-shell">
      <a href="#main-content" class="chip" style="position:absolute;left:-9999px;top:12px;z-index:200;">Skip to content</a>
      <header class="site" role="banner">
        <div class="wrap nav-row">
          <a href="/" class="brand">AI Training Directory</a>
          <nav class="top-nav" aria-label="Main navigation">
            <a href="/">Home</a>
            <a href="/categories/">Categories</a>
            <a href="/solutions/">Solutions</a>
            <a href="/compare/">Compare</a>
            <a href="/advertise/">Founding Partners</a>
            <a href="/submit/">Submit Tool</a>
          </nav>
        </div>
      </header>
      <main id="main-content" class="wrap" role="main">
        <slot />
      </main>
      <footer class="site-footer" role="contentinfo">
        <div class="wrap" style="padding-block:1rem;color:var(--muted);font-size:0.95rem;">
          © {new Date().getFullYear()} AI Training Directory · Trusted picks for L&D and enablement teams
        </div>
      </footer>
    </div>
    <style>
      .site-shell > a:focus-visible { left: 1rem; }
    </style>
  </body>
</html>
