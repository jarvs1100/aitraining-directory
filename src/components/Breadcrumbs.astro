---
const { items = [] } = Astro.props;
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: items.map((item, i) => ({
    '@type': 'ListItem',
    position: i + 1,
    name: item.label,
    item: `https://aitraining.directory${item.href}`
  }))
};
---
<nav aria-label="Breadcrumb" style="margin-bottom:1.1rem;">
  <ol style="display:flex;flex-wrap:wrap;gap:.45rem;list-style:none;padding:0;margin:0;color:var(--muted);font-size:.82rem;font-weight:700;text-transform:uppercase;letter-spacing:.04em;">
    {items.map((item, i) => (
      <li style="display:inline-flex;align-items:center;gap:.45rem;">
        {i > 0 && <span aria-hidden="true">/</span>}
        {i < items.length - 1 ? <a href={item.href}>{item.label}</a> : <span aria-current="page">{item.label}</span>}
      </li>
    ))}
  </ol>
</nav>
<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
