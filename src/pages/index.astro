---
import Base from '../layouts/Base.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { allListings, getCategories } from '../lib/data.js';

const categories = getCategories();
const featured = allListings.slice(0, 12);

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'AI Training Directory',
  description: 'Curated AI tools for employee training and learning & development teams.',
  url: 'https://aitraining.directory/',
  hasPart: featured.map((tool, i) => ({
    '@type': 'ListItem',
    position: i + 1,
    url: `https://aitraining.directory/tool/${tool.slug}/`,
    name: tool.name
  }))
};
---
<Base
  title="AI Training Directory | Best AI Tools for L&D and Employee Training"
  description="Discover top AI tools for employee training, SOP-to-video workflows, onboarding, and corporate learning operations."
  canonical="https://aitraining.directory/"
  jsonLd={jsonLd}
>
  <Breadcrumbs items={[{ label: 'Home', href: '/' }]} />

  <section class="hero">
    <span class="eyebrow">Built for L&D teams</span>
    <h1 style="margin-top:.7rem;max-width:18ch;">Find AI tools that cut training production time without hurting quality</h1>
    <p class="muted" style="max-width:72ch;">Skip generic AI directories. This site is built for high-intent training workflows: SOP updates, onboarding systems, compliance refreshes, enablement rollouts, and multilingual delivery. Use it to move from research to pilot decisions with less noise.</p>
    <div class="hero-actions">
      <a class="btn btn-primary" href="/solutions/">Start with solution pages</a>
      <a class="btn btn-secondary" href="/compare/">Compare alternatives</a>
      <a class="btn btn-secondary" href="/categories/">Explore categories</a>
    </div>
  </section>

  <section class="section card" aria-labelledby="framework-heading">
    <h2 id="framework-heading">How to evaluate AI training tools in 30 days</h2>
    <ol>
      <li><strong>Week 1:</strong> choose one high-friction workflow and baseline your current cycle time.</li>
      <li><strong>Week 2:</strong> run a controlled pilot with one content owner and one reviewer.</li>
      <li><strong>Week 3:</strong> measure quality and business outcomes (completion, readiness, error reduction).</li>
      <li><strong>Week 4:</strong> document SOPs, approval gates, and rollout plan for scale.</li>
    </ol>
    <div class="chips">
      <a class="chip" href="/solutions/sop-to-video-training/">SOP to video playbook</a>
      <a class="chip" href="/solutions/new-hire-onboarding-automation/">Onboarding automation</a>
      <a class="chip" href="/solutions/compliance-training-content-creation/">Compliance content workflows</a>
    </div>
  </section>

  <section class="section" aria-labelledby="category-heading">
    <h2 id="category-heading">Popular categories</h2>
    <div class="chips">
      {categories.map((c) => <a class="chip" href={`/category/${c.slug}/`}>{c.name} <span aria-hidden="true">·</span> {c.count}</a>)}
    </div>
  </section>

  <section class="section" aria-labelledby="featured-heading">
    <h2 id="featured-heading">Featured tools</h2>
    <div class="grid">
      {featured.map((tool) => (
        <article class="card">
          <div class="chips" style="margin-bottom:.85rem;">
            <span class="badge">{tool.category}</span>
            <span class="badge">{tool.pricing}</span>
          </div>
          <h3 style="margin-bottom:.45rem;"><a href={`/tool/${tool.slug}/`} style="color:inherit;">{tool.name}</a></h3>
          <p class="muted" style="margin-bottom:1rem;">{tool.summary}</p>
          <a href={tool.website} rel="nofollow noopener" target="_blank">Visit website ↗</a>
        </article>
      ))}
    </div>
  </section>
</Base>
