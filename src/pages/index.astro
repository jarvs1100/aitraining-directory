---
import Base from '../layouts/Base.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { allListings, getCategories } from '../lib/data.js';

const categories = getCategories();
const featured = allListings.slice(0, 12);

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'AI Training Directory',
  description: 'Curated AI tools for employee training and learning & development teams.',
  url: 'https://aitraining.directory/',
  hasPart: featured.map((tool, i) => ({
    '@type': 'ListItem',
    position: i + 1,
    url: `https://aitraining.directory/tool/${tool.slug}/`,
    name: tool.name
  }))
};
---
<Base
  title="AI Training Directory | Best AI Tools for L&D and Employee Training"
  description="Discover top AI tools for employee training, SOP-to-video workflows, onboarding, and corporate learning operations."
  canonical="https://aitraining.directory/"
  jsonLd={jsonLd}
>
  <Breadcrumbs items={[{ label: 'Home', href: '/' }]} />

  <section class="hero">
    <span class="eyebrow">Built for L&D teams</span>
    <h1 style="margin-top:.7rem;max-width:18ch;">Find AI tools that cut training production time without hurting quality</h1>
    <p class="muted" style="max-width:70ch;">Skip generic AI directories. This index is curated for onboarding, SOP updates, enablement rollouts, and internal training ops. Filter faster, pilot smarter, and move from shortlist to implementation.</p>
    <div class="chips" style="margin-bottom:.8rem;">
      <span class="badge">Traffic-first curation</span>
      <span class="badge">Waitlist-ready partner model</span>
      <span class="badge">EU localization rollout</span>
    </div>
    <div class="hero-actions">
      <a class="btn btn-primary" href="/categories/">Explore categories</a>
      <a class="btn btn-secondary" href="/compare/">Compare alternatives</a>
      <a class="btn btn-secondary" href="/advertise/">Join founding partner waitlist</a>
    </div>
  </section>

  <section class="section" aria-labelledby="category-heading">
    <h2 id="category-heading">Popular categories</h2>
    <div class="chips">
      {categories.map((c) => <a class="chip" href={`/category/${c.slug}/`}>{c.name} <span aria-hidden="true">·</span> {c.count}</a>)}
    </div>
  </section>

  <section class="section" aria-labelledby="featured-heading">
    <h2 id="featured-heading">Featured tools</h2>
    <div class="grid">
      {featured.map((tool) => (
        <article class="card">
          <div class="chips" style="margin-bottom:.85rem;">
            <span class="badge">{tool.category}</span>
            <span class="badge">{tool.pricing}</span>
          </div>
          <h3 style="margin-bottom:.45rem;"><a href={`/tool/${tool.slug}/`} style="color:inherit;">{tool.name}</a></h3>
          <p class="muted" style="margin-bottom:1rem;">{tool.summary}</p>
          <a href={tool.website} rel="nofollow noopener" target="_blank">Visit website ↗</a>
        </article>
      ))}
    </div>
  </section>

  <section class="section card" aria-labelledby="why-heading">
    <h2 id="why-heading">Why teams use this directory</h2>
    <p class="muted">Built for practical evaluation: category filters, scenario pages, and comparison routes that map to real buying discussions inside L&D and enablement teams.</p>
    <div class="chips">
      <a class="chip" href="/solutions/">Browse use-case playbooks</a>
      <a class="chip" href="/compare/">Open comparison pages</a>
      <a class="chip" href="/submit/">Submit your tool</a>
    </div>
  </section>

  <section class="section" aria-labelledby="lang-heading">
    <h2 id="lang-heading">European language editions</h2>
    <div class="chips">
      <a class="chip" href="/pl/narzedzia-ai-do-szkolen/">Polski</a>
      <a class="chip" href="/cs/ai-nastroje-pro-skoleni-zamestnancu/">Čeština</a>
      <a class="chip" href="/sk/ai-nastroje-na-skolenie-zamestnancov/">Slovenčina</a>
      <a class="chip" href="/hu/ai-eszkozok-munkavallaloi-kepzeshez/">Magyar</a>
      <a class="chip" href="/de/ki-tools-fuer-mitarbeiterschulung/">Deutsch</a>
      <a class="chip" href="/es/herramientas-ia-formacion-empleados/">Español</a>
    </div>
  </section>
</Base>
