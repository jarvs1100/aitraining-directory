---
import Base from '../layouts/Base.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { getCategories } from '../lib/data.js';

const categories = getCategories();
---
<Base
  title="AI Training Tool Categories | AI Training Directory"
  description="Explore AI training tools by category, including AI video, AI chat, AI voice, AI productivity, and more."
  canonical="https://aitraining.directory/categories/"
>
  <Breadcrumbs items={[{ label: 'Home', href: '/' }, { label: 'Categories', href: '/categories/' }]} />

  <section class="hero" style="margin-bottom:1.25rem;">
    <span class="eyebrow">Category map</span>
    <h1 style="margin-top:.7rem;">Browse AI tools by training workflow</h1>
    <p class="muted" style="max-width:65ch;">Choose a category to see vetted tools with summaries, pricing model, and direct links for faster evaluation.</p>
  </section>

  <section aria-labelledby="all-categories-heading">
    <h2 id="all-categories-heading">All categories</h2>
    <div class="grid">
      {categories.map((c) => (
        <a class="card" href={`/category/${c.slug}/`}>
          <h3 style="margin-bottom:.45rem;color:inherit;">{c.name}</h3>
          <p class="muted" style="margin:0;">{c.count} tools</p>
        </a>
      ))}
    </div>
  </section>
</Base>
