---
import Base from '../../layouts/Base.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { allListings, getCategorySlug } from '../../lib/data.js';

export async function getStaticPaths() {
  return allListings.map((tool) => ({ params: { slug: tool.slug } }));
}

const { slug } = Astro.params;
const tool = allListings.find((t) => t.slug === slug);

if (!tool) {
  throw new Error(`Tool not found: ${slug}`);
}

const canonical = `https://aitraining.directory/tool/${tool.slug}/`;
const categorySlug = getCategorySlug(tool.category);
const relatedTools = allListings.filter((item) => item.category === tool.category && item.slug !== tool.slug).slice(0, 3);

const internalLinkModules = {
  synthesia: {
    heading: 'Implementation paths to evaluate Synthesia faster',
    links: [
      { href: '/solutions/sop-to-video-training/', label: 'SOP to video implementation checklist' },
      { href: '/compare/synthesia-alternatives/', label: 'Synthesia alternatives decision matrix' },
      { href: '/solutions/multilingual-employee-training/', label: 'Multilingual training rollout playbook' }
    ]
  },
  descript: {
    heading: 'Where Descript fits in training operations',
    links: [
      { href: '/compare/descript-vs-camtasia-for-training-videos/', label: 'Descript vs Camtasia for training videos' },
      { href: '/solutions/microlearning-video-production/', label: 'Microlearning video production workflow' },
      { href: '/solutions/knowledge-base-to-training/', label: 'Knowledge base to training process' }
    ]
  },
  'elevenlabs': {
    heading: 'Voiceover planning routes before committing to ElevenLabs',
    links: [
      { href: '/compare/murf-vs-elevenlabs-for-training-voiceovers/', label: 'Murf vs ElevenLabs for training voiceovers' },
      { href: '/solutions/compliance-training-content-creation/', label: 'Compliance content creation workflow' },
      { href: '/solutions/product-training-rollouts/', label: 'Product training rollout operations' }
    ]
  },
  loom: {
    heading: 'Loom workflow routes for onboarding and enablement',
    links: [
      { href: '/solutions/new-hire-onboarding-automation/', label: 'Onboarding automation framework' },
      { href: '/solutions/manager-coaching-playbooks/', label: 'Manager coaching playbook route' },
      { href: '/compare/ai-roleplay-simulators-vs-video-only-onboarding/', label: 'Roleplay vs video-only onboarding comparison' }
    ]
  },
  guidde: {
    heading: 'Guidde implementation routes for SOP and process training',
    links: [
      { href: '/solutions/sop-to-video-training/', label: 'SOP-to-video implementation route' },
      { href: '/solutions/knowledge-base-to-training/', label: 'Knowledge base to training workflow' },
      { href: '/compare/scorm-authoring-vs-lms-native-builders/', label: 'SCORM vs LMS-native builders comparison' }
    ]
  },
  chatgpt: {
    heading: 'Planning routes before scaling ChatGPT in L&D',
    links: [
      { href: '/solutions/ai-tools-for-training-and-development/', label: 'AI tools for training and development route' },
      { href: '/compare/chatgpt-vs-claude-for-ld-content/', label: 'ChatGPT vs Claude for L&D content' },
      { href: '/solutions/eu-ai-act-ai-literacy-training/', label: 'EU AI Act literacy implementation route' }
    ]
  },
  claude: {
    heading: 'Planning routes before scaling Claude in L&D',
    links: [
      { href: '/compare/chatgpt-vs-claude-for-ld-content/', label: 'ChatGPT vs Claude for L&D content' },
      { href: '/solutions/knowledge-base-to-training/', label: 'Knowledge base to training workflow' },
      { href: '/solutions/ai-tools-for-training-and-development/', label: 'AI tools for training and development route' }
    ]
  },
  camtasia: {
    heading: 'Video-production routes relevant to Camtasia',
    links: [
      { href: '/compare/descript-vs-camtasia-for-training-videos/', label: 'Descript vs Camtasia comparison' },
      { href: '/compare/scorm-authoring-vs-lms-native-builders/', label: 'SCORM vs LMS-native builders comparison' },
      { href: '/solutions/sop-to-video-training/', label: 'SOP-to-video implementation route' }
    ]
  },
  'murf-ai': {
    heading: 'Voice-over planning routes before committing to Murf',
    links: [
      { href: '/compare/murf-vs-elevenlabs-for-training-voiceovers/', label: 'Murf vs ElevenLabs comparison' },
      { href: '/solutions/multilingual-employee-training/', label: 'Multilingual employee training route' },
      { href: '/solutions/compliance-training-content-creation/', label: 'Compliance training content route' }
    ]
  },
  trainual: {
    heading: 'Operations routes linked to Trainual-style workflows',
    links: [
      { href: '/compare/trainual-vs-knowledge-base-workflows/', label: 'Trainual vs knowledge-base workflows' },
      { href: '/solutions/sop-to-video-training/', label: 'SOP-to-video implementation route' },
      { href: '/solutions/new-hire-onboarding-automation/', label: 'Onboarding automation route' }
    ]
  }
};

const internalModule = internalLinkModules[tool.slug];
const categoryWorkflowLinks = {
  'AI Video Training': [
    { href: '/solutions/sop-to-video-training/', label: 'SOP-to-video workflow' },
    { href: '/compare/synthesia-alternatives/', label: 'Synthesia alternatives comparison' },
    { href: '/compare/scorm-authoring-vs-lms-native-builders/', label: 'SCORM vs LMS-native builders comparison' }
  ],
  'AI Chat': [
    { href: '/solutions/ai-tools-for-training-and-development/', label: 'AI tools for training and development route' },
    { href: '/compare/chatgpt-vs-claude-for-ld-content/', label: 'ChatGPT vs Claude comparison' },
    { href: '/compare/ai-literacy-training-platforms-vs-general-compliance-courses-for-eu-ai-act-readiness/', label: 'AI literacy platform comparison' }
  ],
  'AI Voice': [
    { href: '/compare/murf-vs-elevenlabs-for-training-voiceovers/', label: 'Murf vs ElevenLabs comparison' },
    { href: '/solutions/multilingual-employee-training/', label: 'Multilingual training route' },
    { href: '/solutions/compliance-training-content-creation/', label: 'Compliance content route' }
  ]
};
const categoryCluster = categoryWorkflowLinks[tool.category];

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'SoftwareApplication',
      name: tool.name,
      description: tool.summary,
      url: tool.website,
      applicationCategory: tool.category,
      offers: {
        '@type': 'Offer',
        price: tool.pricing === 'Paid' ? 'Paid plan' : '0',
        priceCurrency: 'USD'
      }
    },
    {
      '@type': 'FAQPage',
      mainEntity: [
        {
          '@type': 'Question',
          name: `What is ${tool.name} best for in L&D?`,
          acceptedAnswer: {
            '@type': 'Answer',
            text: `${tool.name} is generally used for training content workflows where teams need faster creation and consistent delivery.`
          }
        },
        {
          '@type': 'Question',
          name: `How should teams evaluate ${tool.name}?`,
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Pilot one high-friction workflow first (onboarding, SOP updates, or coaching content), then measure cycle-time and adoption before scaling.'
          }
        }
      ]
    }
  ]
};
---
<Base
  title={`${tool.name} Review & Alternatives | AI Training Directory`}
  description={`${tool.name}: features, pricing model, and fit for AI training workflows.`}
  canonical={canonical}
  jsonLd={jsonLd}
>
  <Breadcrumbs items={[{ label: 'Home', href: '/' }, { label: tool.category, href: `/category/${categorySlug}/` }, { label: tool.name, href: `/tool/${tool.slug}/` }]} />

  <article>
    <header class="hero" style="margin-bottom:1.25rem;">
      <div class="chips" style="margin-bottom:.8rem;">
        <span class="badge badge-active">{tool.category}</span>
        <span class="badge">{tool.pricing}</span>
      </div>
      <h1 style="margin-bottom:.7rem;">{tool.name}</h1>
      <p class="muted" style="max-width:72ch;">{tool.summary}</p>
      <div class="hero-actions">
        <a class="btn btn-primary" href={tool.website} target="_blank" rel="nofollow noopener">Visit {tool.name} â†—</a>
        <a class="btn btn-secondary" href={`/category/${categorySlug}/`}>More {tool.category} tools</a>
        <a class="btn btn-secondary" href="/compare/">Compare alternatives</a>
      </div>
    </header>

    <section class="card" aria-labelledby="features-heading">
      <h2 id="features-heading">Key features</h2>
      <ul>
        {tool.features.map((feature) => <li>{feature}</li>)}
      </ul>
    </section>

    <section class="section card" aria-labelledby="fit-heading">
      <h2 id="fit-heading">Who this is for</h2>
      <p class="muted" style="margin-bottom:0;">Teams building repeatable onboarding, SOP, and internal training workflows that need faster content production without sacrificing quality controls.</p>
    </section>

    <section class="section card" aria-labelledby="route-bridge-heading">
      <h2 id="route-bridge-heading">Navigate implementation routes from this tool</h2>
      <div class="chips chips-nav">
        <a class="chip" href="/">Return to homepage</a>
        <a class="chip" href="/solutions/">Open solution hub</a>
        <a class="chip" href="/compare/">Open compare hub</a>
      </div>
    </section>

    {internalModule && (
      <section class="section card" aria-labelledby="internal-links-heading">
        <h2 id="internal-links-heading">{internalModule.heading}</h2>
        <div class="chips">
          {internalModule.links.map((item) => (
            <a class="chip" href={item.href}>{item.label}</a>
          ))}
        </div>
      </section>
    )}

    {categoryCluster && (
      <section class="section card" aria-labelledby="category-cluster-heading">
        <h2 id="category-cluster-heading">Workflow cluster links for {tool.category}</h2>
        <div class="chips">
          {categoryCluster.map((item) => (
            <a class="chip" href={item.href}>{item.label}</a>
          ))}
        </div>
      </section>
    )}

    {Boolean(relatedTools.length) && (
      <section class="section" aria-labelledby="related-heading">
        <h2 id="related-heading">Related tools in {tool.category}</h2>
        <div class="grid">
          {relatedTools.map((item) => (
            <article class="card">
              <h3><a href={`/tool/${item.slug}/`}>{item.name}</a></h3>
              <p class="muted" style="margin:0;">{item.summary}</p>
            </article>
          ))}
        </div>
      </section>
    )}

    <p class="section"><a class="chip" href="/solutions/">See scenario-based picks</a></p>
  </article>
</Base>
