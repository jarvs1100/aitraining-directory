    internalLinks: [
      { label: 'Compare onboarding delivery models', href: '/compare/ai-roleplay-simulators-vs-video-only-onboarding/' },
      { label: 'Open customer support training route', href: '/solutions/customer-support-training/' },
      { label: 'Open manager coaching playbooks route', href: '/solutions/manager-coaching-playbooks/' }
