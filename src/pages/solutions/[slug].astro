const content = { ...defaultContent, ...(contentBySlug[slug] || {}) };
const faq = [
  ...content.faqs,
  { q: 'How do we keep quality high while scaling output?', a: 'Use standard templates, assign clear approvers, and require a lightweight QA pass before each publish cycle.' }
];

const relatedLinks = [
  { label: 'Browse all solution pages', href: '/solutions/' },
  { label: 'Compare alternatives for your shortlist', href: '/compare/' },
  { label: 'Editorial methodology and evidence links', href: '/editorial-methodology/' },
  { label: 'L&D tech evaluation checklist route', href: '/solutions/ai-ld-tech-evaluation-checklist/' },
  { label: 'Explore category-level tool options', href: '/categories/' },
  { label: 'SOP to Video Training', href: '/solutions/sop-to-video-training/' },
  { label: 'Compliance Training Content', href: '/solutions/compliance-training-content-creation/' },
  { label: 'Customer Support Training', href: '/solutions/customer-support-training/' }
];

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    { '@type': 'CollectionPage', name: page.title, description: page.meta, url: canonical },
    {
      '@type': 'FAQPage',
      mainEntity: faq.map((item) => ({
        '@type': 'Question',
        name: item.q,
        acceptedAnswer: { '@type': 'Answer', text: item.a }
      }))
    }
  ]
};
---
<Base title={page.title} description={page.meta} canonical={canonical} jsonLd={jsonLd}>
  <Breadcrumbs items={[{ label: 'Home', href: '/' }, { label: 'Solutions', href: '/solutions/' }, { label: page.label, href: `/solutions/${slug}/` }]} />

  <section class="hero">
    <span class="eyebrow">{page.type.replace('-', ' ')} implementation page</span>
    <h1 style="margin-top:0.8rem;">{page.title}</h1>
    <p class="muted">{page.intro} Use this page to align stakeholder goals, pilot the right tools, and operationalize delivery.</p>
  </section>

  <section class="section card" aria-labelledby="buyer-checklist-heading">
    <h2 id="buyer-checklist-heading">Buyer checklist before vendor shortlist</h2>
    <ul>
      <li>Keep the pilot scope narrow: one workflow and one accountable owner.</li>
      <li>Score options with four criteria: workflow-fit, governance, localization, implementation difficulty.</li>
      <li>Use the same source asset and reviewer workflow across all options.</li>
      <li>Record reviewer effort and update turnaround before final ranking.</li>
      <li>Use the <a href="/editorial-methodology/">editorial methodology</a> as your scoring standard.</li>
    </ul>
    <div class="chips chips-nav">
      <a class="chip" href="/solutions/ai-ld-tech-evaluation-checklist/">Open L&D tech evaluation checklist route</a>
      <a class="chip" href="/compare/">Open compare routes</a>
    </div>
  </section>

  <section class="section">
    <h2>Recommended tools to evaluate</h2>
    <div class="grid">
      {tools.map((tool) => (
        <article class="card">
          <div><span class="badge">{tool.category}</span><span class="badge">{tool.pricing}</span></div>
          <h3><a href={`/tool/${tool.slug}/`}>{tool.name}</a></h3>
          <p>{tool.summary}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="section">
    <h2>{content.frameworkName}</h2>
    <ol>
      {content.framework.map((step) => <li>{step}</li>)}
    </ol>
    <p class="muted" style="margin-top:.7rem;">{content.example}</p>
  </section>

  <section class="section">
    <h2>Implementation checklist for L&D teams</h2>
    <ul>
      {content.checklist.map((item) => <li>{item}</li>)}
    </ul>
  </section>

  <section class="section card" aria-labelledby="solution-implementation-steps-heading">
    <h2 id="solution-implementation-steps-heading">Implementation steps (first 30 days)</h2>
    <ol>
      {content.implementationSteps.map((step) => <li>{step}</li>)}
    </ol>
  </section>

  <section class="section card" aria-labelledby="solution-decision-matrix-heading">
    <h2 id="solution-decision-matrix-heading">Decision matrix for pilot approval</h2>
    <table>
