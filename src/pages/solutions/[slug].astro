const defaultContent = {
  frameworkName: 'Practical implementation framework',
  framework: ['Define one measurable workflow outcome tied to business impact.', 'Pilot with a small team and strict QA ownership.', 'Standardize templates, review process, and publishing cadence.', 'Scale only after measurable gains in cycle time and learner outcomes.'],
  example: 'Example: Teams usually see stronger adoption when they start with one repetitive training workflow and a clear owner.',
  checklist: [
    'Define baseline KPIs before tool trials (cycle time, completion, quality score, or ramp speed).',
    'Assign one accountable owner for prompts, templates, and governance approvals.',
    'Document review standards so AI-assisted content stays consistent and audit-safe.',
    'Link every module to a business workflow, not just a content topic.',
    'Plan monthly refresh cycles to avoid stale training assets.'
  ],
  pitfalls: [
    'Running pilots without a baseline, then claiming gains without evidence.',
    'Splitting ownership across too many stakeholders and slowing approvals.',
    'Scaling output before QA standards and version controls are stable.'
  ],
  internalLinks: [
    { label: 'Compare implementation-focused alternatives', href: '/compare/' },
    { label: 'Browse all AI training solutions', href: '/solutions/' },
    { label: 'Explore tool categories', href: '/categories/' }
  ],
  implementationSteps: [
    'Define pilot scope and success metrics with one accountable owner.',
    'Run a controlled implementation sprint with fixed review and approval path.',
    'Document outcomes, defects, and update-latency after one real revision cycle.',
    'Scale only after governance and ownership are stable in production conditions.'
  ],
  decisionMatrix: [
    { criterion: 'Workflow-fit', weight: '30%', strongSignal: 'Team can run end-to-end workflow with less friction than current state.' },
    { criterion: 'Governance and QA', weight: '25%', strongSignal: 'Approval controls and quality checks remain reliable at speed.' },
    { criterion: 'Localization or audience-variant readiness', weight: '25%', strongSignal: 'Content variants can be maintained without full rebuilds.' },
    { criterion: 'Implementation effort', weight: '20%', strongSignal: 'Ongoing operations fit current team capacity and cadence.' }
  ],
  topicClusterLinks: [
    { label: 'Solutions hub', href: '/solutions/' },
    { label: 'Compare hub', href: '/compare/' },
    { label: 'L&D tech evaluation checklist', href: '/solutions/ai-ld-tech-evaluation-checklist/' },
    { label: 'Editorial methodology', href: '/editorial-methodology/' }
  ],
  faqs: [
    { q: `How should ${page.label.toLowerCase()} teams shortlist AI tools?`, a: 'Start with one workflow bottleneck, run a 2-week pilot, and measure cycle-time reduction before broader rollout.' },
    { q: 'What matters most for L&D buyers?', a: 'Version control, collaboration, integration with existing systems, and ease of updating training assets over time.' }
  ]
